@model List<hsdc.dpt.Control.DTO.Creational.Prototype.RingleERP.InternalDto.PurchaseOrderDto>

@{
    ViewBag.Title = "取得採購清單";
}

<h2>RingleERP範例 - 取得採購清單</h2>

<table class="table-bordered">
    <colgroup>
        <col width="100" />
        <col width="300" />
        <col width="200" />
        <col width="300" />
    </colgroup>
    <thead>
        <tr>
            <th>採購編號</th>
            <th>客戶名稱</th>
            <th>總金額</th>
            <th>複製</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var po in Model)
            {
                <tr>
                    <td>@po.PoNumber</td>
                    <td>@po.CustomerName</td>
                    <td align="right">@po.Total</td>
                    <td><a href="/Prototype/RingleERPCopy?poNumber=@po.PoNumber">複製</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">查無相關資料</td>
            </tr>
        }
    </tbody>
</table>
<br />
